<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="欢迎注册"
        android:textColorHint="#666"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/register_uname"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:hint="输入用户名"
        android:lines="1"
        android:textColorHint="#666"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/register_phoneNum"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:hint="输入手机号"
        android:lines="1"
        android:textColorHint="#666"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/register_qq"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:hint="输入座QQ"
        android:lines="1"
        android:textColorHint="#666"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/register_passwd"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:lines="1"
        android:textColorHint="#666"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/register_realname"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:hint="输入姓名"
        android:inputType="textPassword"
        android:lines="1"
        android:textColorHint="#666"
        android:textSize="12sp" />

    <RadioGroup
        android:id="@+id/rg_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_name"
        android:layout_marginLeft="60dp"
        android:contentDescription="性别"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="男" />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/resitting_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/shape_register"
            android:text="重置" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/shape_register"
            android:text="注册" />
    </LinearLayout>


</LinearLayout>
